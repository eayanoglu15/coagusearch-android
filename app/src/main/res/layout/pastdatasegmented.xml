<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/whiteback">

    <Button
        android:id="@+id/fibtembutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:background="@drawable/segmentedbuttonchecked"
        android:text="Fibtem"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/extembutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_weight="1"
        android:background="@drawable/segmentedbuttonback"

        android:text="Extem"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/intembutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"

        android:layout_weight="1"
        android:background="@drawable/segmentedbuttonback"
        android:text="Intem"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/ordersbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@drawable/segmentedbuttonback"
        android:text="Orders"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary" />
</LinearLayout>