<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bloodorderback"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/productRadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="@string/producttype"
            android:textColor="#404d66"
            android:textSize="@dimen/smalltext" />

        <RadioButton
            android:id="@+id/ffp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:buttonTint="@color/blue"
            android:text="@string/frozen"
            android:textColor="#404d66"
            android:textSize="@dimen/xsmalltext" />

        <RadioButton
            android:id="@+id/pcc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:buttonTint="@color/blue"
            android:text="@string/plateret"
            android:textColor="#404d66"
            android:textSize="@dimen/xsmalltext" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rhRadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/bloodTypeRadioGroup"
        app:layout_constraintStart_toStartOf="@+id/bloodTypeRadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/bloodTypeRadioGroup">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="Rh"
            android:textColor="#404d66"
            android:textSize="@dimen/smalltext" />

        <RadioButton
            android:id="@+id/Positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:buttonTint="@color/blue"
            android:text="@string/positive"
            android:textColor="#404d66" />

        <RadioButton
            android:id="@+id/Negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:buttonTint="@color/blue"
            android:text="@string/negative"
            android:textColor="#404d66" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/bloodTypeRadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="6"
        app:layout_constraintEnd_toEndOf="@+id/productRadioGroup"
        app:layout_constraintStart_toStartOf="@+id/productRadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/productRadioGroup">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/bloodType"
            android:textColor="#404d66"
            android:textSize="@dimen/smalltext" />

        <RadioButton
            android:id="@+id/A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeTextType="none"
            android:buttonTint="@color/blue"
            android:text="A"
            android:textColor="#404d66"
            android:textSize="@dimen/smalltext" />

        <RadioButton
            android:id="@+id/B"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/blue"
            android:text="B"
            android:textColor="#404d66" />

        <RadioButton
            android:id="@+id/AB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:buttonTint="@color/blue"
            android:text="AB"
            android:textColor="#404d66"
            android:textSize="@dimen/xsmalltext" />

        <RadioButton
            android:id="@+id/O"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/blue"
            android:text="0"
            android:textColor="#404d66" />
    </RadioGroup>

    <TextView
        android:id="@+id/addNoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shadowedticked"
        android:drawableRight="@drawable/ic_event_note_black_24dp"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="@string/addnote"
        android:textColor="@color/white"
        android:textSize="@dimen/smalltext"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="@+id/rhRadioGroup"
        app:layout_constraintTop_toTopOf="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        style="@style/TextInputLayout"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:autoSizeMaxTextSize="@dimen/smalltext"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Unit"
        android:inputType="number"
        android:textSize="@dimen/smalltext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rhRadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/rhRadioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>