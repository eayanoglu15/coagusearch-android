<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#42000000" />
            <corners android:radius="@dimen/cornerRad" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange" />
            <corners android:radius="@dimen/cornerRad" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="@dimen/multicolorCardLeftPadding"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/cornerRad" />
        </shape>
    </item>
</layer-list>