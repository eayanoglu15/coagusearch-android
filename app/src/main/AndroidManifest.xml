<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="LockedOrientationActivity"
    package="com.example.coagusearch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".medicalTeam.medicalTeamBottomNavigation"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="sensorPortrait">
        </activity>
        <activity android:name=".doctor.treatmentStatus"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".doctor.decideTreatment"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".doctor.decisionActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".MainActivity2"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    android:screenOrientation="sensorPortrait"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".medicalTeam.MedTeamEditPatient"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".medicalTeam.MedTeamAddPatient"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".medicalTeam.MedTeamAllPatients"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".medicalTeam.MedicalTeamMain"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".doctor.PastMicroTemData"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".doctor.PatientPastDataActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".doctor.microTemData"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".doctor.PatientAppointments"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".doctor.PatientBloodOrder"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".doctor.doctorMyPatient"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".doctor.doctorMain"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".patient.AddMedicine"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".patient.NewAppointment"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"
            />
        <activity
            android:name=".patient.accountPage"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".patient.main"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>